+import os
+import pandas as pd
+import pytest
+import pathlib
+from src.forecasting import forecast_membership
+
+@pytest.mark.slow
+def test_membership_forecast_with_real_prophet_small_sample():
+    \"\"\"Optional slow test using the real Prophet fit on a small slice.
+    Enabled only if RUN_SLOW=1 is set and Prophet/cmdstanpy are available.
+    \"\"\"
+    if os.getenv('RUN_SLOW', '0') != '1':
+        pytest.skip('Set RUN_SLOW=1 to run slow Prophet test')
+    root = pathlib.Path(__file__).resolve().parents[1]
+    df = pd.read_csv(root / 'lgcopmbr.csv')
+    df['Date'] = pd.to_datetime(df['Date'], errors='coerce')
+    df['Membership_Count'] = pd.to_numeric(df['Membership_Count'], errors='coerce')
+    # Use a small history window (e.g., last 6 months) to keep runtime down
+    df = df.sort_values('Date').tail(6)
+    fc = forecast_membership(df, periods=2, fallback_on_insufficient=False)
+    assert len(fc) == 2
+    assert {'ds','yhat','yhat_lower','yhat_upper'}.issubset(fc.columns)
