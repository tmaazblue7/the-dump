+import pandas as pd
+import pathlib
+import importlib
+
+# We import the module under test after optionally monkeypatching things if needed in tests.
+import src.forecasting as forecasting
+
+
+class FakeProphet:
+    \"\"\"Lightweight stand-in for Prophet used in fast tests.
+    It returns a flat forecast equal to the last observed y.
+    \"\"\"
+    def __init__(self, **kwargs):
+        self.kwargs = kwargs
+        self._last_ds = None
+        self._last_y = None
+
+    def fit(self, df):
+        # df has columns ['ds', 'y']
+        self._last_ds = df['ds'].max()
+        self._last_y = float(df.loc[df['ds'].idxmax(), 'y'])
+        return self
+
+    def make_future_dataframe(self, periods: int, freq, include_history: bool = False):
+        # freq is a pandas offset (MonthBegin(1)), which date_range accepts
+        return pd.DataFrame({
+            'ds': pd.date_range(self._last_ds, periods=periods, freq=freq, inclusive='right')
+        })
+
+    def predict(self, future: pd.DataFrame) -> pd.DataFrame:
+        out = future.copy()
+        out['yhat'] = self._last_y
+        out['yhat_lower'] = self._last_y
+        out['yhat_upper'] = self._last_y
+        return out
+
+
+def test_membership_forecast_fallback_on_insufficient(monkeypatch):
+    \"\"\"If we pass only future rows (no Membership_Count history), function should fallback (no Prophet call).\"\""
+    df = pd.DataFrame({
+        'Date': pd.to_datetime(['2026-01-01', '2026-02-01']),
+        'Membership_Count': [pd.NA, pd.NA],
+        'Forecasted_Membership': [12345, 12346],
+        'LOB': ['X', 'X'],
+    })
+    # Ensure Prophet is not touched by using the fallback path
+    result = forecasting.forecast_membership(df, periods=3, fallback_on_insufficient=True)
+    assert set(['ds', 'yhat', 'yhat_lower', 'yhat_upper']).issubset(result.columns)
+    assert len(result) == 3
+    # flat line (default last_y when no history is 0.0)
+    assert float(result['yhat'].iloc[0]) == 0.0
+
+
+def test_membership_forecast_happy_path_with_fake_prophet(monkeypatch):
+    \"\"\"Provide minimal valid history and monkeypatch Prophet with FakeProphet for a fast, deterministic test.\"\""
+    # Minimal two points at month-start to satisfy Prophet
+    df = pd.DataFrame({
+        'Date': pd.to_datetime(['2025-01-01', '2025-02-01']),
+        'Membership_Count': [1000, 1010],
+        'LOB': ['Y', 'Y'],
+    })
+    # Monkeypatch the Prophet symbol inside src.forecasting to our FakeProphet
+    monkeypatch.setattr(forecasting, 'Prophet', FakeProphet)
+    fc = forecasting.forecast_membership(df, periods=2, fallback_on_insufficient=False)
+    assert set(['ds', 'yhat', 'yhat_lower', 'yhat_upper']).issubset(fc.columns)
+    assert len(fc) == 2
+    # Our fake returns a flat extension from the last observed value (1010)
+    assert float(fc['yhat'].iloc[0]) == 1010.0
+
+
+def test_forecast_call_volume_annual_rate_to_monthly():
+    # yhat is monthly stock; annual per-member contact rate is divided by 12
+    mf = pd.DataFrame({
+        'ds': pd.to_datetime(['2025-03-01', '2025-04-01']),
+        'yhat': [20000.0, 20100.0],
+        'yhat_lower': [0.0, 0.0],
+        'yhat_upper': [0.0, 0.0],
+    })
+    out = forecasting.forecast_call_volume(mf, annual_contact_rate=0.36)  # 36% annually => 3% monthly
+    assert 'Monthly_Call_Volume' in out.columns
+    # 20000 * 0.36 / 12 = 600
+    assert abs(out['Monthly_Call_Volume'].iloc[0] - 600.0) < 1e-9
+
+
+def test_membership_forecast_on_sample_csvs_with_fake_prophet(monkeypatch):
+    \"\"\"Load your sample CSVs, combine, group by LOB, and ensure we can forecast forward quickly.\"\""
+    root = pathlib.Path(__file__).resolve().parents[1]
+    df = pd.concat([pd.read_csv(root / 'iu65mbr.csv'), pd.read_csv(root / 'lgcopmbr.csv')], ignore_index=True)
+    df['Date'] = pd.to_datetime(df['Date'], errors='coerce')
+    df['Membership_Count'] = pd.to_numeric(df['Membership_Count'], errors='coerce')
+    # Monkeypatch Prophet to avoid heavy Stan work
+    monkeypatch.setattr(forecasting, 'Prophet', FakeProphet)
+    groups = list(df.dropna(subset=['Date']).groupby('LOB', dropna=True))
+    assert len(groups) >= 1
+    for lob, g in groups:
+        fc = forecasting.forecast_membership(g, periods=3, fallback_on_insufficient=True)
+        assert len(fc) == 3
+        assert set(['ds','yhat','yhat_lower','yhat_upper']).issubset(fc.columns)
+
